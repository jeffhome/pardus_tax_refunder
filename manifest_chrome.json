{
	"manifest_version": 2,
	"name": "Pardus Tax Refunder",
	"author": "Miche",
	"version": "1.0.0",
	"description": "Assist in processing tax refunds based on pilot activity for use by an Alliance Treasurer within Pardus (a MMORPG set in space).",
	"icons": {
		"16":  "icons/icon_16.png",
		"32":  "icons/icon_32.png",
		"64":  "icons/icon_64.png",
		"128": "icons/icon_128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.pardus.at/alliance_funds.php"
			],
			"js":  [ "tax.js" ],
			"css": [ "tax.css" ],
			"all_frames": true,
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": [ "background.js" ]
	},
	"permissions": [ "storage" ],
	"browser_action": {
		"browser_style": true,
		"default_icon": {
		"16":  "icons/icon_16.png",
		"32":  "icons/icon_32.png",
		"64":  "icons/icon_64.png",
		"128": "icons/icon_128.png"
		},
		"default_title": "Pardus Tax Refunder",
		"default_popup": "popup/popup.html",
		"default_area":  "navbar"
	},
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true
	},
	"web_accessible_resources": [
		"images/*.png"
	]
}